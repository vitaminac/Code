{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "bash.exe",
                "args": [
                    "-c"
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "Build With G++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "program.out",
                "${relativeFile}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build With GCC",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-o",
                "program.out",
                "${relativeFile}"
                "-lm",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}