{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "bash.exe",
                "args": ["-c"]
            }
        }
    },
    "tasks": [
        {
            "label": "Build on WSL",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "program.out",
                "${relativeFile}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}